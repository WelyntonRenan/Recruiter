<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cadastrar Cliente </title>
  <%- include ('partials/header.ejs') %>
</head>

<body>
  <div class="container" style="margin-top: 20px;">
    <div class="card">
      <div class="card-header">
        <h2>Cadastro de Funcionário</h2>
      </div>
      <div class="card-body">
        <form method="post" action="">
          <div class="row">
            <div class="col">
              <label>Nome</label>
              <input class="form-control" type="text" name="nome" placeholder="Digite o nome aqui">
              <br />
            </div>
            <div class="col">
              <label>Sobrenome</label>
              <input class="form-control" type="text" name="sobrenome" placeholder="Digite o sobrenome">
              <br />
            </div>
          </div>
          <div class="row">
            <div class="col">
              <label>Cargo</label>
              <input class="form-control" type="text" name="cargo" placeholder="Digite o cargo">
              <br />
            </div>
            <div class="col">
              <label>Idade</label>
              <input class="form-control" type="number" name="idade" placeholder="Digite a idade">
              <br />
            </div>
            <div class="col">
              <label>Nascimento</label>
              <input class="form-control" type="date" name="nascimento" placeholder="Data de nascimento">
              <br />
            </div>
          </div>
          <div class="row">
            <div class="col">
              <label>Email</label>
              <input class="form-control" type="email" name="email"
                placeholder="Digite o email (exemplo: email@email.com)">
              <br />
            </div>
            <div class="col-md-auto">
              <label>Contato</label>
              <input class="form-control" type="tel" name="celular" placeholder="Celular">
              <br />
            </div>
          </div>
          <div class="row">
            <div class="col">
              <label for="inputCity" class="form-label">2º Contato </label>
              <input type="text" class="form-control" name="telefone" placeholder="Telefone">
            </div>
            <div class="col">
              <label for="inputCity" class="form-label">CPF</label>
              <input type="number" class="form-control" name="cpf" placeholder="Digite o CPF">
            </div>
            <div class="col">
              <label for="inputCity" class="form-label">Nacionalidade</label>
              <input type="text" class="form-control" name="nacionalidade" placeholder="Nacionalidade">
            </div>
            <div class="col">
              <label for="inputCity" class="form-label">Naturalidade</label>
              <input type="text" class="form-control" name="naturalidade" placeholder="Naturalidade">
            </div>
          </div>
          </br>
          <div class="row">
            <div class="col">
              <select class="form-control" name="estadoCivil">
                <option selected>Estado Civil</option>
                <option>Solteiro</option>
                <option>Casado</option>
                <option>Divórciado</option>
                <option>União Estável</option>
                <option>Viúvo</option>
              </select>
              <br />
            </div>
            <div class="col">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="sexo" value="masculino" checked>
                <label class="form-check-label" for="gridRadios1">
                  Masculino
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="sexo" value="feminino">
                <label class="form-check-label" for="gridRadios2">
                  Feminino
                </label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <label for="inputCity" class="form-label">CEP</label>
              <input type="number" class="form-control" name="cep" placeholder="Digite o CEP">
            </div>
            <div class="col">
              <label for="inputCity" class="form-label">Cidade</label>
              <input type="text" class="form-control" name="cidade" placeholder="Digite a cidade">
            </div>
            <div class="col">
              <label for="inputCity" class="form-label">Estado</label>
              <input type="text" class="form-control" name="estado" placeholder="Digite o estado">
            </div>
            <div class="col">
              <label for="inputCity" class="form-label">Numero</label>
              <input type="number" class="form-control" name="numero" placeholder="Digite numero">
            </div>
          </div>
          <br />
          <button type="submit" class="btn btn-success">Cadastrar</button>
          <a href="/" class="btn btn-link">Voltar</a>
        </form>
      </div>
    </div>
  </div>


</body>
<%- include ('partials/footer.ejs') %>

</html>