<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Atualizar Cadastros</title>
  <%- include ('partials/header.ejs') %>
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
</head>

<body>
  <%- include ('partials/navbar.ejs') %>
    <div class="container">
      <div id="alerta">
        <div class="alert alert-success d-flex align-items-center" role="alert">
          <div id="resultados">
          </div>
        </div>
      </div>
      <div class="card">
        <ul class="list-group list-group-flush"></ul>
        <% lista.forEach(function(user){ %>
          <li class="list-group-item">
            <%= user.id %> | <a href="/atualizar/<%= user.id %>">
                <%= user.nome %>
                  <%= user.sobrenome %>
              </a>
          </li>
          <% }) %>
            </ul>
      </div>
</body>

<script>
  $('#alerta').delay(2000).fadeOut(800);
  var results = document.querySelectorAll("li");
  let numberOfResults = results.length;
  const alerta = document.getElementById('resultados');
  alerta.innerHTML = `O sistemas retornou ${numberOfResults} resultados...`

</script>

<%- include ('partials/footer.ejs') %>


</html>